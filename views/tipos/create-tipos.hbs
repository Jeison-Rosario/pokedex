<div class="row">

<div class="col-md-3"></div>
<div class="col-md-6">

    <div class="card">
    <div class="card-header bg-dark text-white">
        {{#if editMode}}Edicion{{else}}Creacion{{/if}} de Tipos
    </div>
    <div class="card-body">

        <form method="POST" action="{{#if editMode}}/edit-tipos{{else}}/create-tipos{{/if}}">
        <div class="mb-3">
        <label for="name" class="form-label">Tipo de pokemon</label>
        <input type="text" class="form-control" id="name" name="Name" value="{{#if editMode}}{{tipo.tipo}}{{/if}}" />
        </div>

        {{#if editMode}}

        <input type="hidden" name="tipoId" value="{{tipo.idTipo}}">
        {{/if}}

        <button type="submit" class="btn btn-primary">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
        <a href="/" type="button" class="btn btn-warning">volver atras</a>
    </form>

    </div>
    </div>

</div>
<div class="col-md-6"></div>

</div>